using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class FollowObject : MonoBehaviour
{
    public Transform target;  // Obiekt, który będzie śledzony
    public float smoothTime = 0.3f;  // Czas wygładzenia dla SmoothDamp
    public float lerpSpeed = 2.0f;   // Prędkość Lerp
    public bool useSmoothDamp = true; // Wybór metody śledzenia

    private Vector3 velocity = Vector3.zero;  // Zmienna potrzebna dla SmoothDamp

    void Update()
    {
        if (useSmoothDamp)
        {
            // SmoothDamp: płynne przemieszczanie się obiektu w kierunku celu
            transform.position = Vector3.SmoothDamp(transform.position, target.position, ref velocity, smoothTime);
        }
        else
        {
            // Lerp: interpolacja liniowa między obecną pozycją a pozycją celu
            transform.position = Vector3.Lerp(transform.position, target.position, lerpSpeed * Time.deltaTime);
        }
    }
}
